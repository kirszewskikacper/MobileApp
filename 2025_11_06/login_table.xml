        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:text="Logowanie"
                android:textSize="30sp" />
